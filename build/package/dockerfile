FROM golang:1.24 AS build-stage

ARG appname

WORKDIR /app

COPY go.mod go.sum ./

RUN go mod download

RUN --mount=type=bind,target=. CGO_ENABLED=0 GOOS=linux go build -o /go_app ./cmd/$appname/.


FROM gcr.io/distroless/base-debian12 AS build-release-stage

ARG appname

WORKDIR /

COPY --from=build-stage /go_app /go_app

EXPOSE 8080

USER nonroot:nonroot

ENTRYPOINT ["/go_app"]
