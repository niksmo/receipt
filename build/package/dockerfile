FROM golang:1.24 AS build-stage

ARG appname

WORKDIR /app

ADD https://github.com/niksmo/receipt.git#main ./

RUN go mod download

RUN ls -la

RUN CGO_ENABLED=0 GOOS=linux go build -o /go_app ./cmd/$appname/.


FROM gcr.io/distroless/base-debian12 AS build-release-stage

ARG appname

WORKDIR /

COPY --from=build-stage /go_app /go_app

EXPOSE 8080

USER nonroot:nonroot

ENTRYPOINT ["/go_app"]
